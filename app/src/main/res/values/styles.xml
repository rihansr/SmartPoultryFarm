<resources>

    <!--Default Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Splash Theme-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Notification Dialog Theme-->
    <style name="NotificationDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/text_Color_Accent</item>
        <item name="android:textSize">@dimen/text_Size_Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_dialog_notification</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogDefaultAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_in_down</item>
    </style>

    <style name="ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/text_Color_Light</item>
        <item name="android:textSize">@dimen/text_Size_Small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>
